{
  "name": "fab-inspector",
  "displayName": "Fab Inspector",
  "description": "Run Fab Inspector (aka PBI Inspector V2) against your Microsoft Fabric CI/CD items directly within VS Code!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "fabric",
    "microsoftfabric",
    "powerbi"
  ],
  "files": [
    "out/**/*",
    "bin/**/*",
    "README.md",
    "LICENSE"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fab-inspector.inspect",
        "title": "Fab Inspect"
      },
      {
        "command": "fab-inspector.inspectWithCurrentRulesFile",
        "title": "Fab Inspect"
      },
      {
        "command": "fab-inspector.wrapWithLog",
        "title": "Fab Log"
      },
      {
        "command": "fab-inspector.unwrapLog",
        "title": "Fab Unlog"
      },
      {
        "command": "fab-inspector.runRule",
        "title": "Fab Run Rule"
      },
      {
        "command": "fab-inspector.updateCli",
        "title": "Fab Inspector: Update CLI"
      },
      {
        "command": "fab-inspector.cliInfo",
        "title": "Fab Inspector: Show CLI Info"
      }
    ],
    "configuration": {
      "title": "Fab Inspector",
      "properties": {
        "fabInspector.autoUpdateCli": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check for and download CLI updates"
        },
        "fabInspector.cliUpdateInterval": {
          "type": "number",
          "default": 24,
          "description": "Hours between CLI update checks (when auto-update is enabled)"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "fab-inspector.inspectWithCurrentRulesFile",
          "when": "editorLangId == json",
          "group": "fab-inspector@1"
        },
        {
          "command": "fab-inspector.wrapWithLog",
          "when": "editorHasSelection && editorLangId == json",
          "group": "fab-inspector@2"
        },
        {
          "command": "fab-inspector.unwrapLog",
          "when": "editorHasSelection && editorLangId == json",
          "group": "fab-inspector@3"
        },
        {
          "command": "fab-inspector.runRule",
          "when": "editorHasSelection && editorLangId == json",
          "group": "fab-inspector@4"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/jsonpath": "^0.2.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "jsonpath": "^1.1.1"
  }
}
